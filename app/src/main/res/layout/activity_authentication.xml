<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3E5A88"
    android:layout_height="match_parent"
    tools:context=".Job.Activity.AuthenticationActivity">

    <include android:id="@+id/toolbarMainActivity"
        layout="@layout/toolbar"/>


    <com.nexttech.easybusinesscard.Job.Utils.NonSwipeableViewPager
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:id="@+id/container"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/bagbutton"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/bagicon"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/chatbutton"
            android:padding="8dp"
            android:src="@drawable/chaticon"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cardbutton"
            android:padding="8dp"
            android:src="@drawable/cardicon"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/profileicon"
            android:id="@+id/profilebutton"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>