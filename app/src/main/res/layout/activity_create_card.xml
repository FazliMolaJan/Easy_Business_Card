<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Create_card">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:foregroundGravity="center"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/importtemp"
                        android:layout_width="0dp"
                        android:background="@color/buttonbackground"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="Import"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/share"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:textColor="#000"
                        android:focusable="true"
                        android:background="@color/buttonbackground"
                        android:layout_height="match_parent"
                        android:text="Share"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/export"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:textColor="#000"
                        android:focusable="true"
                        android:background="@color/buttonbackground"
                        android:layout_height="match_parent"
                        android:text="Export"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/browse"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="#000"
                        android:background="@color/buttonbackground"
                        android:layout_height="match_parent"
                        android:text="Browse"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <AbsoluteLayout
            android:id="@+id/absolute_layout_front"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_temp_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:src="@drawable/cardone" />


        </AbsoluteLayout>

        <AbsoluteLayout
            android:id="@+id/absolute_layout_back"
            android:layout_width="match_parent"
            android:background="#fff"
            android:visibility="gone"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_temp_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:src="@drawable/cardone" />


        </AbsoluteLayout>




    </LinearLayout>






    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/buttonbackground"
        app:cardElevation="10dp"
      >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:textStyle="bold"
                android:text="Tools"
                android:textColor="#000"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"/>

       <androidx.viewpager.widget.ViewPager
           android:id="@+id/viewpager"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_undo_black_24dp"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv_lock_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/radiobutton"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>