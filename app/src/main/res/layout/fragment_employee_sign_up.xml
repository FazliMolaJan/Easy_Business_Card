<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EmployeeSignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            card_view:cardElevation="20dp"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideInset"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                    <EditText
                        android:id="@+id/employee_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:textColor="#000"
                        android:layout_marginTop="16dp"
                        android:textSize="20sp"
                        android:background="@drawable/edit_text_border"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"

                        />
                    <EditText
                        android:id="@+id/employee_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/edit_text_border"
                            android:gravity="center"
                            android:padding="8dp"
                            android:hint="+880"
                            android:editable="false"
                            android:enabled="false"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>


                        <EditText
                            android:id="@+id/employee_mobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:padding="8dp"
                            android:gravity="center"
                            android:hint="Mobile Number"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:background="@drawable/edit_text_border"/>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/employee_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Your Country"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/employee_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:text="I have read understood, and agree to the "/>
                        <TextView
                            android:id="@+id/employee_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/buttonColor"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:maxLines="1"
                            android:text="terms and policies"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_employee_signUp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#FFF"
                        android:layout_marginTop="30dp"
                        android:padding="12dp"
                        android:text="Sign Up"
                        android:textSize="28sp"
                        android:background="@drawable/button_signup"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="60dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?  "
                            android:textColor="#8A8181"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/employee_logIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/buttonColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="  Log In"/>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>