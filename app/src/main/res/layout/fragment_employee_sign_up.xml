<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EmployeeSignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">
    <!-- TODO: Update blank fragment layout -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:foregroundGravity="center"
            app:cardBackgroundColor="#FEFEFF"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingBottom="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                    <EditText
                        android:id="@+id/employee_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:background="@drawable/edit_text_border"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <EditText
                        android:id="@+id/employee_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:background="@drawable/edit_text_border"
                            android:text="+880"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"/>
                        <view
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/employee_mobile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Mobile Number"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:background="@drawable/edit_text_border"/>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/employee_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Your Country"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/employee_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:text="I have read understood, and agree to the "/>
                        <TextView
                            android:id="@+id/employee_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/buttonColor"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:text="terms and policies"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_employee_signUp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#FFF"
                        android:layout_marginTop="30dp"
                        android:padding="12dp"
                        android:text="Sign Up"
                        android:textSize="28sp"
                        android:background="#3D5898"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="60dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?"
                            android:textColor="#8A8181"
                            android:textSize="16sp"
                            />
                        <view
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="16sp"
                            />
                        <view
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/employee_logIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/buttonColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Log In"/>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>