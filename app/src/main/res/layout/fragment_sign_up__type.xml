<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7fcff"

    tools:context=".signUp_Type">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a Type to Create an Account"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/buttonColor"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="20dp"
        card_view:contentPadding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/employee" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I'm an employee i want to work"
                    android:textSize="11sp"
                    android:textColor="@color/buttonColor"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/buttonColor"
                    android:textColor="#fff"
                    android:text="SIGN UP"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/employer"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I'm an employer i want to post jobs"
                    android:textSize="11sp"
                    android:textColor="@color/buttonColor"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:background="@color/buttonColor"
                    android:text="SIGN UP" />

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>



</LinearLayout>