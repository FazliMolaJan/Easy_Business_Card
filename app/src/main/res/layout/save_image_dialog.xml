<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#BBF5C2"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Dialog"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="26sp"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Picture" />

            <View
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <RadioButton
                android:id="@+id/radio_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_front"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Front Side"
                android:background="@drawable/button_background_shape"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18dp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Back Side"
                android:background="@drawable/button_background_shape"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18dp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_both"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Both Side"
                android:background="@drawable/button_background_shape"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:textColor="@android:color/holo_blue_dark"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>