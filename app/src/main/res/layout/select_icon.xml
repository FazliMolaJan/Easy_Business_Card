            android:id="@+id/icon3"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/facebook" />
        <ImageView
            android:id="@+id/icon4"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/facebook" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
